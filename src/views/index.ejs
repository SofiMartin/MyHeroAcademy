<script>
const cards = document.querySelectorAll('.card');

cards.forEach(card => {
  card.addEventListener('mousemove', e => {
    const rect = card.getBoundingClientRect();
    const x = e.clientX - rect.left;
    const y = e.clientY - rect.top;

    const xPercent = (x / rect.width - 0.5) * 20; // Ajusta la inclinación en el eje X
    const yPercent = (y / rect.height - 0.5) * 20; // Ajusta la inclinación en el eje Y

    card.style.transform = `rotateX(${-yPercent}deg) rotateY(${xPercent}deg) scale(1.05)`;
    
    // Mueve la capa plástica con el mouse
    const plasticLayer = card.querySelector('::before');
    plasticLayer.style.transform = `translate(${xPercent}%, ${yPercent}%)`;
  });

  card.addEventListener('mouseleave', () => {
    card.style.transform = '';
  });
});
  </script>

